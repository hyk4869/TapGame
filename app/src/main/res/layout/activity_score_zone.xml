<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreZone"
    android:orientation="vertical">


    <TextView
        android:id="@+id/newScoreText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/NEWSCORE_Label"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ec5353" />

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/TIME_Label"
        android:gravity="center"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/highScoreText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/HIGHSCORE_Label"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/timeText1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/defaultZeroHour"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timeText2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/defaultZeroHour"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timeText3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/defaultZeroHour"
            android:gravity="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="@string/HOME_Label"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_btn_blue_15"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/RetryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="@string/RETRY_Label"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_btn_blue_15"
            app:backgroundTint="@null" />
    </LinearLayout>

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="@string/RESETSCORE_Label"
        android:background="@drawable/custom_btn_blue_15"
        app:backgroundTint="@null" />

</LinearLayout>